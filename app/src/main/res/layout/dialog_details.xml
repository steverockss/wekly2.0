<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background">
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/dialog_escort_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:text="Escort Name"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/dialog_escort_description"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/dialog_escort_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Precio"
            android:background="@drawable/capsule"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/dialog_button_hire"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/show_style"
            android:text="Contratar"
            android:textColor="@color/colorWhite"

            android:layout_marginTop="10dp"/>

    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dialog_escort_image"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:src="@drawable/martina"
        android:layout_alignParentTop="true"
      />




</RelativeLayout>